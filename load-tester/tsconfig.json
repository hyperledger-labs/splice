{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext"],
    "module": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx"
  }
}
