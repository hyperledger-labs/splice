{
  "daml.extraArguments": "--studio-auto-run-all-scenarios=yes",
  "typescript.tsdk": "./apps/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.watcherExclude": {
    "**/target": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "eslint.workingDirectories": [
    "./cluster/pulumi/canton-network",
    "./cluster/pulumi/canton-network-gateway",
    "./cluster/pulumi/common",
    "./cluster/pulumi/gcp",
    "./cluster/pulumi/infra",
    "./cluster/pulumi/multi-validator",
    "./cluster/pulumi/sv-runbook",
    "./cluster/pulumi/validator-runbook"
  ],
  "python.formatting.provider": "none",
  "files.readonlyInclude": {
    "**/.daml/unpacked-dars/**": true
  },
  "metals.inlayHints.implicitArguments.enable": true,
  "metals.inlayHints.implicitConversions.enable": true,
  "makefile.configureOnOpen": false
}
